{
  "printWidth": 100,               
  "tabWidth": 2,                   
  "useTabs": false,                
  "semi": false,                    
  "singleQuote": true,             
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",       
  "trailingComma": "all",          
  "bracketSpacing": true,
  "bracketSameLine": false,        
  "arrowParens": "always",         
  "proseWrap": "preserve",         
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": true, 
  "endOfLine": "lf",              
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false  
}
